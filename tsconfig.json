{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "jsx": "preserve",
        "lib": [
            "dom",
            "esnext"
        ],
        "allowJs": true,
        "noEmit": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "incremental": true,
        "moduleResolution": "node"
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
    ],
    "exclude": [
        "node_modules"
    ]
}